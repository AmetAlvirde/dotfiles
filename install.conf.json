[
  {
    "defaults": {
      "link": {
        "create": true,
        "relink": true
      }
    }
  },
  {
    "clean": ["~"]
  },
  {
    "link": {
      "~/.tmux.conf":              "tmux.conf",
      "~/.zshrc":                  "zshrc",
      "~/.config/nvim/init.vim":   "init.vim",
      "~/.gitconfig":              "gitconfig",
      "~/.emacs.d/init.el":        "init.el",
      "~/.emacs.d/emacs-init.org": "emacs-init.org",
      "~/.config/qtile/config.py": "qtile-config.py"
    }
  },
  {
    "shell": [
      ["git submodule update --init --recursive", "Installing submodules"]
    ]
  }
]
